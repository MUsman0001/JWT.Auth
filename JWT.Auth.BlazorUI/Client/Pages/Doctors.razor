@page "/doctors"

<h3 class="text-center">Doctors</h3>
<div class="doctors-container">
    @foreach (var doctor in doctors)
    {
        <div class="card" @onclick="() => ToggleDetails(doctor.Id)">
            <img src="@doctor.ImageUrl" alt="@doctor.Name" class="card-img-top">
            <div class="card-header">
                <h4 class="card-title">@doctor.Name</h4>
            </div>
            @if (selectedDoctorId == doctor.Id)
            {
                <div class="card-body">
                    <p><strong>Age:</strong> @doctor.Age</p>
                    <p><strong>Gender:</strong> @doctor.Gender</p>
                    <p><strong>Specialty:</strong> @doctor.Specialty</p>
                    <p><strong>Description:</strong> @doctor.Description</p>
                </div>
            }
        </div>
    }
</div>

@code {
    private int selectedDoctorId = -1;

    private List<Doctor> doctors = new List<Doctor>
    {
        new Doctor
        {
            Id = 1,
            Name = "Dr. John Doe",
            Age = 45,
            Gender = "Male",
            Specialty = "Cardiology",
            Description = "Dr. John Doe is a highly experienced cardiologist with over 20 years of experience in treating cardiovascular diseases.",
            ImageUrl = "https://via.placeholder.com/150"
        },
        new Doctor
        {
            Id = 2,
            Name = "Dr. Jane Smith",
            Age = 39,
            Gender = "Female",
            Specialty = "Neurology",
            Description = "Dr. Jane Smith is a dedicated neurologist specializing in neurodegenerative disorders and patient care.",
            ImageUrl = "https://via.placeholder.com/150"
        },
        new Doctor
        {
            Id = 3,
            Name = "Dr. Robert Brown",
            Age = 50,
            Gender = "Male",
            Specialty = "Orthopedics",
            Description = "Dr. Robert Brown has extensive experience in orthopedic surgery and rehabilitation, ensuring patients receive the best care.",
            ImageUrl = "https://via.placeholder.com/150"
        }
    };

    private void ToggleDetails(int doctorId)
    {
        if (selectedDoctorId == doctorId)
        {
            selectedDoctorId = -1;
        }
        else
        {
            selectedDoctorId = doctorId;
        }
    }

    public class Doctor
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public int Age { get; set; }
        public string Gender { get; set; }
        public string Specialty { get; set; }
        public string Description { get; set; }
        public string ImageUrl { get; set; }
    }
}
<style>
    .doctors-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1rem;
        padding: 2rem;
    }

    .card {
        background-color: #ffffff;
        border-radius: 0.5rem;
        box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }

        .card:hover {
            transform: translateY(-0.5rem);
            box-shadow: 0 0 1.5rem rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .card-header {
        background-color: #007bff;
        color: #ffffff;
        padding: 1rem;
        text-align: center;
    }

    .card-title {
        margin: 0;
    }

    .card-body {
        padding: 1rem;
        text-align: center;
    }
</style>
